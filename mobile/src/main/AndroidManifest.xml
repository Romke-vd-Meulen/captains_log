<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.redgetrek.captainslog" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InitialActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartTimer"
            android:label="@string/started_activity_title" >
        </activity>
        <activity
            android:name=".StopTimer"
            android:label="@string/title_activity_stop_timer" >
        </activity>
        <activity
            android:name=".FinishedActivity"
            android:label="@string/title_activity_finished"
            android:parentActivityName=".InitialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.redgetrek.captainslog.InitialActivity" />
        </activity>
    </application>

</manifest>
